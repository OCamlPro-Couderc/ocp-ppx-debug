begin program "my_ppx"
  files = [ "my_ppx.ml" ]
  requires = [ "ppx_debug" ]
  comp = [ "-annot" "-ppx" "%{ppx_tools_FULL_DST_DIR}%/ppx_metaquot"]
end

begin program "test_ppx";
  files = [ "test.ml" ];
  requires = [ "my_ppx"];
  comp_requires = [ "my_ppx:asm" ];
  comp = [ "-annot" "-dsource" "-ppx" "%{my_ppx_FULL_DST_DIR}%/my_ppx.asm" ];
end
